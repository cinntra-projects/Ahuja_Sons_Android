<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/ic_login_back"
    android:layout_height="match_parent">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="@dimen/size_35"
            android:layout_marginRight="@dimen/size_35"
            app:cardCornerRadius="@dimen/size_8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_height="400dp">

            <com.github.loadingview.LoadingView
                android:visibility="gone"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                app:lv_duration="30"
                app:lv_end_color="@color/color_end"
                app:lv_external_radius="24dp"
                app:lv_internal_radius="4dp"
                app:lv_start_color="@color/color_start"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/loader"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_height="match_parent">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Login"
                    android:textSize="@dimen/text_size_24"
                    android:layout_gravity="center"
                    android:textColor="@color/colorPrimary" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textField"
                    android:layout_marginTop="@dimen/size_20"
                    android:layout_marginLeft="@dimen/size_10"
                    android:layout_marginRight="@dimen/size_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:startIconContentDescription="Username"
                    app:startIconTint="@color/colorPrimary"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:textColorHint="@color/black"
                    app:boxStrokeColor="@color/colorPrimary"
                    app:boxStrokeErrorColor="@color/red"
                    app:hintAnimationEnabled="true"
                    app:errorEnabled="true"
                    android:hint="Username">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapWords"
                        android:id="@+id/login_username"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_16"
                        android:paddingLeft="@dimen/size_10"
                        android:paddingRight="@dimen/size_10"
                        android:maxLines="1"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/passwordField"
                    android:layout_marginTop="@dimen/size_20"
                    android:layout_marginLeft="@dimen/size_10"
                    android:layout_marginRight="@dimen/size_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:helperTextTextColor="@color/colorPrimary"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/colorPrimary"
                    app:startIconTint="@color/colorPrimary"
                    android:textColorHint="@color/black"
                    app:boxStrokeColor="@color/colorPrimary"
                    app:boxStrokeErrorColor="@color/red"
                    app:errorEnabled="true"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:hint="Password"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textWebPassword"
                        android:id="@+id/login_password"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_16"
                        android:paddingLeft="@dimen/size_10"
                        android:paddingRight="@dimen/size_10"
                        android:maxLines="1" />



                </com.google.android.material.textfield.TextInputLayout>




                <CheckBox
                    android:buttonTint="@color/colorPrimary"
                    android:buttonTintMode="src_atop"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/rememberme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remember me"
                    android:layout_gravity="left"
                    android:layout_marginLeft="@dimen/size_5"/>


                <Button
                    android:id="@+id/login_go"
                    android:layout_width="@dimen/size_100"
                    android:layout_height="@dimen/size_50"
                    android:text="Login"
                    android:textAllCaps="false"
                    android:background="@drawable/rounded_blue_background"
                    app:backgroundTint="@color/colorPrimary"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/size_30"/>

            </LinearLayout>




        </androidx.cardview.widget.CardView
>






</androidx.constraintlayout.widget.ConstraintLayout>